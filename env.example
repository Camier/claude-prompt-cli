# Claude Prompt Enhancer v3.0 Configuration
# Copy this file to .env and update with your values

# Hugging Face Configuration (for HF Pro users)
HF_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI Configuration (coming soon)
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic Configuration (coming soon)  
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Google Configuration (coming soon)
# GOOGLE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Default Settings
DEFAULT_PROVIDER=ollama        # ollama, huggingface, openai, anthropic, google
DEFAULT_MODE=balanced         # balanced, ultrathink, coding, analysis, creative
DEFAULT_AI_MODEL=balanced     # For HF: fast, balanced, deep

# Cache Configuration
CACHE_DIR=~/.cache/claude-enhancer
CACHE_TTL=86400              # 24 hours in seconds

# Performance Settings
MAX_PROMPT_LENGTH=50000      # Maximum prompt length in characters
REQUEST_TIMEOUT=120000       # Request timeout in milliseconds
MAX_RETRIES=3               # Maximum retry attempts

# Feature Flags
ENABLE_TELEMETRY=false      # Anonymous usage statistics
ENABLE_AUTO_UPDATE=false    # Check for updates
ENABLE_PLUGINS=true         # Enable plugin system

# UI Configuration
NO_COLOR=false              # Disable colored output
QUIET_MODE=false            # Minimal output
VERBOSE_MODE=false          # Detailed logging

# Analytics Dashboard
DASHBOARD_PORT=3000         # Port for web dashboard (future feature)
DASHBOARD_THEME=dark        # dark, light, auto